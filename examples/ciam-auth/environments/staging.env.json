{
  "name": "staging",
  "variables": {
    "API_BASE_URL": "https://api.staging.example.com",
    "CLIENT_ID": "staging-client-456"
  },
  "target": {
    "baseUrl": "https://api.staging.example.com",
    "timeout": 10000
  },
  "load": {
    "phases": [
      {
        "name": "Warm-up",
        "duration": "1m",
        "arrivalRate": 2
      },
      {
        "name": "Ramp-up",
        "duration": "2m",
        "arrivalRate": 2,
        "rampTo": 20
      },
      {
        "name": "Peak Load",
        "duration": "5m",
        "arrivalRate": 20
      },
      {
        "name": "Sustained Load",
        "duration": "5m",
        "arrivalRate": 15
      },
      {
        "name": "Cool-down",
        "duration": "1m",
        "arrivalRate": 15,
        "rampTo": 1
      }
    ]
  },
  "thresholds": {
    "p50ResponseTime": 200,
    "p95ResponseTime": 400,
    "p99ResponseTime": 800,
    "maxErrorRate": 0.01,
    "minThroughput": 10
  },
  "http": {
    "pool": 20,
    "timeout": 10000,
    "maxRedirects": 3
  }
}
