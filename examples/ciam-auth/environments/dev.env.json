{
  "name": "dev",
  "description": "Development environment - 1.2M calls/day target volume",
  "variables": {
    "API_BASE_URL": "https://dev.api.company.com/auth"
  },
  "target": {
    "baseUrl": "https://dev.api.company.com/auth",
    "timeout": 15000
  },
  "load": {
    "phases": [
      {
        "name": "warm-up",
        "duration": "1m",
        "arrivalRate": 5
      },
      {
        "name": "ramp",
        "duration": "2m",
        "arrivalRate": 5,
        "rampTo": 15
      },
      {
        "name": "sustained",
        "duration": "5m",
        "arrivalRate": 15
      },
      {
        "name": "peak",
        "duration": "2m",
        "arrivalRate": 25
      }
    ]
  },
  "thresholds": {
    "p95ResponseTime": 500,
    "p99ResponseTime": 1000,
    "maxErrorRate": 0.01
  },
  "http": {
    "pool": 10,
    "timeout": 15000,
    "maxRedirects": 3
  }
}
